<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar Example</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    <style>
        /* Ensure full height for proper positioning */
        body, html {
            height: 100%;
            margin: 0;
            overflow-x: hidden;
        }

        /* Main layout: Header, Section (Sidebar + Content), Footer */
        .main-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        /* Section: Sidebar + Content */
        .main-section {
            display: flex;
            flex: 1;
            position: relative;
        }

        /* Sidebar Styling */
        .sidebar {
            width: 250px;
            background: #f8f9fa;
            position: absolute;
            left: -250px;
            top: 0;
            bottom: 0;
            transition: left 0.3s ease-in-out;
            z-index: 1050; /* Keeps it above content */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        }

        /* Sidebar open */
        .sidebar.show {
            left: 0;
        }

        /* Overlay when sidebar is open */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.3);
            display: none;
            z-index: 1049;
        }

        /* Show overlay when sidebar is open */
        .overlay.active {
            display: block;
        }

        /* Content area */
        .content {
            flex-grow: 1;
            padding: 20px;
            background: #ffffff;
        }

        /* Hide sidebar on small screens */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                left: -100%;
            }
            .sidebar.show {
                left: 0;
            }
        }
    </style>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>
<body>

<div class="main-container">
    <!-- HEADER -->
    <header class="bg-light p-3 text-center">
        <button class="btn btn-primary" id="toggleSidebar">â˜° Open Sidebar</button>
        <h3>MyApp</h3>
    </header>

    <!-- SECTION (Sidebar + Content) -->
    <div class="main-section">
        <!-- SIDEBAR -->
        <div class="sidebar" id="sidebarMenu">
            <div class="p-3">
                <h5>Menu <button class="btn-close float-end" id="closeSidebar"></button></h5>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="#">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Members</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Courses</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Events</a></li>
                </ul>
            </div>
        </div>

        <!-- CONTENT -->
        <div class="content">
            <h2>Welcome to MyApp</h2>
            <p>This is the main content area.</p>
        </div>

        <!-- OVERLAY (for closing sidebar on outside click) -->
        <div class="overlay" id="overlay"></div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-light p-3 text-center">
        <p>&copy; 2025 MyApp. All rights reserved.</p>
    </footer>
</div>

<script>
    // Get elements
    const sidebar = document.getElementById("sidebarMenu");
    const overlay = document.getElementById("overlay");
    const toggleButton = document.getElementById("toggleSidebar");
    const closeButton = document.getElementById("closeSidebar");

    // Open sidebar
    toggleButton.addEventListener("click", () => {
        sidebar.classList.add("show");
        overlay.classList.add("active");
    });

    // Close sidebar when clicking close button
    closeButton.addEventListener("click", () => {
        sidebar.classList.remove("show");
        overlay.classList.remove("active");
    });

    // Close sidebar when clicking outside (overlay)
    overlay.addEventListener("click", () => {
        sidebar.classList.remove("show");
        overlay.classList.remove("active");
    });
</script>

</body>
</html>
